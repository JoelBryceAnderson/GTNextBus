<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"
            android:dither="true">

            <gradient
                android:startColor="#000000"
                android:endColor="#e5e5e5"
                android:centerX="50%"
                android:centerY="50%"
                android:type="radial"
                android:gradientRadius="58%"/>

            <size
                android:width="56dp"
                android:height="56dp"/>

        </shape>
    </item>

    <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
        <shape android:shape="oval"
            android:dither="true">

            <solid android:color="#ffb300" />

            <size
                android:width="56dp"
                android:height="56dp"/>
        </shape>
    </item>

</layer-list>

