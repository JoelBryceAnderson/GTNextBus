<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"
            android:dither="true">

            <gradient
                android:startColor="#FF000000"
                android:endColor="#02000000"
                android:centerX="50%"
                android:centerY="50%"
                android:type="radial"
                android:gradientRadius="58%"/>

            <size
                android:width="56dp"
                android:height="56dp"/>

        </shape>
    </item>

    <item android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="0dp">
        <shape android:shape="oval"
            android:dither="true">

            <solid android:color="#ffca28" />

            <size
                android:width="56dp"
                android:height="56dp"/>
        </shape>
    </item>

</layer-list>


